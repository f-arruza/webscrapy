{{outlet}}
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Listado de Noticias Filtradas</h5>
          <div class="ibox-tools">
            <ul class="dropdown-menu dropdown-user">
              <li>
                <a href="#">Config option 1</a>
              </li>
              <li>
                <a href="#">Config option 2</a>
              </li>
            </ul>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <form role="form" class="form-inline">
              <div class="form-group">
                  <label for="exampleInputEmail2" class="sr-only">Filtro de Busqueda</label>
                  <input placeholder="Palabra clave" id="keyword" class="form-control">
              </div>
              <a {{action "changeFilter"}} style="margin: 0px;" class="btn btn-success" type="submit">Buscar Noticias</a>
          </form>
          <hr>
          {{filteredNews}}
          <table class="table">
            <thead>
              <tr>
                <th>Título</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>Título</th>
              </tr>
            </tfoot>
            <tbody>
              {{#each result as |new|}}
              <tr>
                <td>{{new.title}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
